<main class="main" role="main">
	<section class="grid">
	{{#each posts}}

		<article class="grid-item flex flex-column justify-content-center"
			role="article"
			itemscope itemtype="http://schema.org/BlogPosting">

			<figure class="post-cover overlay brown-overlay">
				<img src="{{this.picture.src}}" alt="{{this.picture.alt}}"
					itemprop="thumbnailUrl">
			</figure>

			<header>
				{{#each this.tags}}
					<a href="#" class="post-category" rel="tag"
						itemprop="about">
						<span class="inner">{{ this.name }}</span>
					</a>
				{{/each}}

				<h2 class="post-title" itemprop="headline">
					<a class="text-white" href="post.html" itemprop="url">
						{{this.title}} <br><span class="post-subtitle">{{this.subTitle}}</span>
					</a>
				</h2>

				<span class="invisible-text" itemprop="publisher">We Love Dev</span>

				<time class="post-date text-white" pubdate date="2015-08-15"
					itemprop="datePublished">
					{{this.date}}
				</time>
			</header>

			<footer class="flex justify-content-center">
				<a class="author flex justify-content-center align-items-center"
					href="#"
					rel="author"
					itemprop="author">
					<img class="author-avatar" src="{{this.author.picture.src}}" alt="{{this.author.picture.alt}}">
					<span class="author-name text-white">{{this.author.name}}</span>
				</a>
			</footer>
		</article>
		
	{{/each}}
	</section>
</main>